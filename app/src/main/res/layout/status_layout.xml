<?xml version="1.0" encoding="utf-8"?>
<org.stratum0.statuswidget.widget.ToolableViewAnimator
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/animator"
    android:inAnimation="@anim/fade_in_delayed"
    android:outAnimation="@anim/fade_out_delayed"
    android:minWidth="320dp"
    custom:initialView="1">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:indeterminate="true"
        android:id="@+id/layout_progress"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_set_status"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/stratum0_open"
                android:id="@+id/set_status_icon"
                />

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:id="@+id/set_status_progress"
                android:indeterminate="true"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/set_status_icon"
                android:layout_alignTop="@+id/set_status_icon"
                android:layout_alignBottom="@+id/set_status_icon"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/current_status_text"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Valodim\nsince 16:33"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/set_status_icon"
                android:layout_alignTop="@+id/set_status_icon"
                android:layout_alignBottom="@+id/set_status_icon"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/current_status_text_crossfade"
                android:textAppearance="?android:textAppearanceMedium"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="8dp"
            style="?android:buttonBarStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_settings"
                android:text="Settings"
                style="?android:buttonBarButtonStyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_open"
                android:text="Open Space"
                style="?android:buttonBarButtonStyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_inherit"
                android:text="Inherit Space"
                android:visibility="gone"
                style="?android:buttonBarButtonStyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_close"
                android:text="Close Space"
                android:visibility="gone"
                style="?android:buttonBarButtonStyle"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_edit_name">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:id="@+id/settings_edit_name"
            android:inputType="textPersonName"
            android:hint="&lt;your nick&gt;"
            android:ems="12"
            android:gravity="center_horizontal"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="8dp"
            style="?android:buttonBarStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_settings_cancel"
                android:text="Cancel"
                style="?android:buttonBarButtonStyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_settings_save"
                android:text="Save"
                style="?android:buttonBarButtonStyle"
                />

        </LinearLayout>

    </LinearLayout>

</org.stratum0.statuswidget.widget.ToolableViewAnimator>